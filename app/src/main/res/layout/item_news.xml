<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="article"
                  type="com.itis.newsapp.presentation.model.ArticleModel"/>
        <variable name="callback"
                  type="com.itis.newsapp.presentation.ui.news.list.NewsItemClickListener"/>
    </data>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:onClick="@{() ->  callback.onClick(article)}"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/normal"
            android:layout_marginEnd="@dimen/normal"
            app:cardUseCompatPadding="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
        >

            <LinearLayout
                    android:id="@+id/li_name"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="8dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/normal"
                        android:text="@string/news_item_name"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/textSizeMedium" />

                <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/normal"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/textSizeSmall"
                        android:text="@={article.title}"
                />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/li_description"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="8dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/normal"
                        android:text="@string/description"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/textSizeMedium" />

                <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/normal"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/textSizeSmall"
                        android:text="@={article.description}"
                />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/li_author"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="8dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/normal"
                        android:text="@string/author"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/textSizeMedium" />

                <TextView
                        android:id="@+id/tv_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/normal"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/textSizeSmall"
                        android:text="@={article.author}"
                />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>