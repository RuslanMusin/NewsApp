<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="article"
                type="com.itis.newsapp.data.network.pojo.response.news.Article" />
    </data>

    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginTop="8dp"
    >

        <LinearLayout
                android:id="@+id/li_name"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="8dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal"
                    android:text="@string/news_item_name"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/textSizeMedium" />

            <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/textSizeSmall"
                    android:text="@={article.title}"
            />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/li_description"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="8dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal"
                    android:text="@string/source_description"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/textSizeMedium" />

            <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/textSizeSmall"
                    android:text="@={article.description}"
            />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/li_author"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="8dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal"
                    android:text="@string/author"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/textSizeMedium" />

            <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/textSizeSmall"
                    android:text="@={article.author}"
            />

        </LinearLayout>

    </LinearLayout>

</layout>