<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your suggestion here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:colorButtonNormal">@color/primary_dark</item>
        <item name="colorButtonNormal">@color/primary_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:dialogTheme">@style/Dialog</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">60%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="colorControlNormal">@color/colorTertiary</item>
        <item name="android:background">@drawable/dialog_background</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="Text.Small.Primary">
        <item name="android:textColor">@color/colorMain</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="Text.Medium.Primary">
        <item name="android:textColor">@color/colorMain</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <style name="Text.Large.Title">
        <item name="android:textColor">@color/colorMain</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button"/>

    <style name="MaterialButton" parent="Button">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:background">@null</item>
        <item name="android:textAppearance">@style/Text.Small</item>
    </style>

    <style name="TertiaryButton" parent="MaterialButton">
        <item name="android:textColor">@color/button_tertiary</item>
    </style>

    <style name="NeutralButton" parent="MaterialButton">
        <item name="android:textColor">@color/button_neutral</item>
    </style>

    <style name="Text.Large.Primary">
        <item name="android:color">@color/colorMain</item>
    </style>

</resources>
